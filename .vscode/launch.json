{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "NodeJS",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "PORT": "5000"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "React",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
    ]
}