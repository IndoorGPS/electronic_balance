{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "React Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "React Node (npm start)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "start"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Node server.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "cwd": "${workspaceFolder}",
            "env": {
                "PORT": "5000"
            },
            "console": "integratedTerminal"
        }
    ]
}